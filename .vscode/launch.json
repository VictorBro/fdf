{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug fdf",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/fdf",
        "args": ["maps/mars.fdf"], // Pass your command-line argument here
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }